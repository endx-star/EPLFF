extends base

block content

  main.main

      .content-page
       - var i=1
        .d-flex.flex-wrap.flex-wrap.align-items-center.justify-content-between.mb-4
          div
            h4.mb-3 Players List
          button.btn.btn-primary.las.la-plus.mr-3(type='button' data-toggle='modal' data-target='.bd-example-modal-lg') Add Player
        table.data-tables.table.mb-0.tbl-server-info
          thead.bg-white.text-uppercase
            tr.ligth.ligth-data
              th No
              th Player Name
              th Price
              th Position
              th Action
          tbody.ligth-body  
            each player in players
              tr
                th #{i} 
                td  #{player.name} 
                  .d-flex.align-items-center
                    img.img-fluid.rounded.avatar-50.mr-3(src=`/img/players/${player.photo}` alt='image')
                    div

                td #{player.price}$
                
                td #{player.position}
                td
                  .d-flex.align-items-center.list-action
                    a.badge.bg-success.mr-2.btnEditPlayer( name="btnEditPlayer" id="btnEditPlayer" idPlayer=`${player.id}` title='' data-original-title='Edit'  href=`/api/v1/players/editplayer/${player.id}`)
                      i.ri-pencil-line.mr-0
                    button.badge.bg-warning.mr-2.deletep(data-toggle='modal' name="deletep" id="deletep" idPlayer=`${player.id}` data-target='.bd-example-modal-sm' data-placement='top' title='' data-original-title='Delete')
                      i.ri-delete-bin-line.mr-0
                - i=i+1

        // Add Player  modal
        .modal.fade.bd-example-modal-lg(tabindex='-1' role='dialog' aria-hidden='true')
          .modal-dialog.modal-lg
            .modal-content
                .modal-header
                  h5.modal-title Add Player
                  button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                  form.form.formet
                    .form__group.col-md-12.form-group
                      label.form__label Player Name
                      input#name.form-control.form__input(type='text',  required)
                    .form__group.ma-bt-md.col-md-12.form-group
                      label.form__label Club
                      select#clubId.selectpicker.form-control(name='type' data-style='py-0')
                          option(value="628a4bf324da9108ec920f84") Kedus St George
                          option(value="628a4bf324da9108ec920f85") Fasil Kenema 
                          option(value="628a4bf324da9108ec920f86") Welayta Dicha
                          option(value="628a4bf324da9108ec920f87") Hawasa Ketema 
                          option(value="628a4bf324da9108ec920f88") Sidama Bunna 
                          option(value="628a4bf324da9108ec920f89") Ethiopia Bunna
                          option(value="628a4bf324da9108ec920f8a") Hadiya Hosaena
                          option(value="628a4bf324da9108ec920f8e") Wolkite Ketema
                          option(value="628a4bf324da9108ec920f90") Adama Ketema
                          option(value="628a4bf324da9108ec920f8b") Mekelakeya
                          option(value="628a4bf324da9108ec920f8c") Arba Minch Kenema
                          option(value="628a4bf324da9108ec920f8f") Dire Dawa Kenema
                          option(value="628a4bf324da9108ec920f8d") Bahardar
                          option(value="628a4bf324da9108ec920f91") Addis Ababa Ketema
                          option(value="628a4bf324da9108ec920f93") Jimma Aba Jifar
                          option(value="628a4bf324da9108ec920f92") Sebeta City
                    //- .form__group.checkbox.d-inline-block
                    //-   label.form__label Injured
                    //-   input#injury.checkbox-input(type='checkbox')
                    .form__group.col-md-12.form-group
                      label.form__label Position
                      select#position.selectpicker.form-control(name='type' data-style='py-0')
                          option(value="Goalkeeper") Goalkeeper   
                          option(value="Midfielder") Midfielder
                          option(value="Defender") Defender
                          option(value="Forward") Forward
                          option(value="Striker") Striker
                    .form__group.col-md-12.form-group
                      label.form__label Price
                      input#price.form-control.form__input(type='text',  required)  
                    .form__group.ma-bt-md.col-md-12.form-group
                      label.form__label Photo
                      input#photo.form-control.form__input(type='file',  required)
                    .form__group.col-md-12.form-group
                      button.btn.btn-primary.btn--green Add Club
       
        // Delete Player modal
        .modal.fade.bd-example-modal-sm(tabindex='-1' role='dialog' aria-hidden='true')
          .modal-dialog.modal-sm
            .modal-content
              .modal-header
                h5.modal-title Delete Player
                button.close(type='button' data-dismiss='modal' aria-label='Close')
                  span(aria-hidden='true') &times;
              .modal-body
                .alert.alert-primary(role='alert')
                  .iq-alert-icon
                    i.ri-alert-line
                  .iq-alert-text Are you sure You Want to Delete This Player?
              .modal-footer
                input#deleteid.form-control(type='text' )
                button.btn.btn-secondary.deletor(type='button'   data-dismiss='modal') No
                button.btn.btn-primary.btns(type='button' id="deletebtn" name="deletor") Approove
        // Page end
      // Wrapper End
      // Backend Bundle JavaScript
      script(src='/assets/js/backend-bundle.min.js')
      // Table Treeview JavaScript
      script(src='/assets/js/table-treeview.js')
      // Chart Custom JavaScript
      script(src='/assets/js/customizer.js')
      // Chart Custom JavaScript
      script(async='' src='/assets/js/chart-custom.js')
      // app JavaScript
      script(src='/assets/js/app.js')
      script(src='/js/deletor.js')
